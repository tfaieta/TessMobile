  AppRegistry,
  StyleSheet,
  Text,
  View
} from 'react-native';

import Login from './src/components/Login.js';

export default class tess extends Component {
  render() {
    return (
        <Login />


    );
  }
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    backgroundColor: '#F5FCFF',
  },
  welcome: {
    fontSize: 20,
    textAlign: 'center',
    margin: 10,
  },
  instructions: {
    textAlign: 'center',
    color: '#333333',
    marginBottom: 5,
  },
});

AppRegistry.registerComponent('tess', () => tess);

